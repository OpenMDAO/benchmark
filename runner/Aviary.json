{
    "repository": "git@github.com:OpenMDAO/Aviary",

    "triggers": [
        "git@github.com:openmdao/OpenMDAO",
        "git@github.com:openmdao/pyCycle",
        "git@github.com:openmdao/dymos"
    ],

    "apptainer": "~/dev/bookworm/bookworm.sif",

    "script_prefix": [
        "#!/bin/bash",
        "set -e",
        "",
        "eval \"$(/mdao/u/swryan/miniforge3/bin/conda shell.bash hook)\"",
        "",
        "source ~/dev/bookworm/NPSSv32_src/dev/npss.env.sh",
        "",
        "export TMPDIR=~/tmp",
        "export OMPI_MCA_rmaps_base_oversubscribe=1",
        "export mpi_warn_on_fork=0"
    ],

    "conda": [
        "python=3.12",
        "numpy",
        "scipy"
    ],

    "conda-forge": [
        "mpi4py",
        "petsc4py"
    ],

    "preinstall": [
        "unset USE_PROC_FILES",
        "pip install git+https://github.com/OpenMDAO/build_pyoptsparse",
        "build_pyoptsparse -b v2.10.1 -s ~/dev/snopt7/src"
    ],

    "dependencies": [
        "matplotlib",
        "pandas",
        "panel",
        "hvplot",
        "pyxdsm",
        "ambiance",
        "openaerostruct"
    ],

    "test_cmd": [
        "FAIL1=0",
        "testflo --timeout=120 --show_skipped -o $RUN_NAME.log || FAIL1=$?",
        "FAIL2=0",
        "testflo --timeout=1500 --show_skipped -o $RUN_NAME.bench.log --testmatch=bench_test* || FAIL2=$?",
        "cat $RUN_NAME.bench.log >> $RUN_NAME.log",
        "if [ $FAIL1 || $FAIL2 ]; then",
        "  exit 1",
        "fi"
    ],

    "benchmark_cmd": "",

    "notify": [
        "UF7E0C7NG",
        "U02BT9BC5",
        "U02BMJF3M"
    ]
}
