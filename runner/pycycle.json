{
    "repository": "git@github.com:openmdao/pycycle",

    "triggers": [
        "git@github.com:openmdao/OpenMDAO"
    ],

    "preinstall": [
        "unset USE_PROC_FILES"
    ],

    "conda": [
        "python=3",
        "gfortran=12",
        "numpy",
        "scipy"
    ],

    "conda-forge": [
        "mpi4py",
        "petsc4py"
    ],

    "dependencies": [
        "sqlitedict"
    ],

    "postinstall": [
        "pip install ~/dev/build_pyoptsparse",
        "build_pyoptsparse -s ~/dev/snopt7/src"
    ],

    "benchmark_timout": 600,

    "notify": [
        "!subteam^S01PJ2C9GPN"
    ]
}
