{
    "repository": "git@developer.nasa.gov:TTT-MDAO/LEAPS-2.0",

    "triggers": [
        "git@github.com:openmdao/OpenMDAO"
    ],

    "preinstall": [
        "unset USE_PROC_FILES"
    ],

    "conda": [
        "python",
        "gfortran=12",
        "numpy",
        "scipy"
    ],

    "conda-forge": [
        "pyoptsparse"
    ],

    "dependencies": [
        "pyxdsm"
    ],

    "postinstall": [
        "cd LEAPS2/XDSM",
        "for fn in `ls *.py`; do",
        "  if [ \"$fn\" != \"make_XDSM.py\" ]; then python $fn; fi",
        "done",
        "cd ../.."
    ],

    "notify": [
        "U02C63E29",
        "U02BT9BC5"
    ]

}
