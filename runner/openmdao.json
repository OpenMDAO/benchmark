{
    "repository": "git@github.com:openmdao/OpenMDAO",

    "triggers": [
    ],

    "preinstall": [
        "unset USE_PROC_FILES"
    ],

    "conda": [
        "python=3",
        "gfortran=12",
        "numpy",
        "scipy"
    ],

    "conda-forge": [
        "mpi4py",
        "petsc4py"
    ],

    "dependencies": [
        "psutil",
        "objgraph",
        "git+https://github.com/mdolab/pyxdsm",
        "jaxlib"
    ],

    "extras": "[all]",

    "postinstall": [
        "~/dev/build_pyoptsparse/build_pyoptsparse.sh -p `pwd` -s ~/dev/snopt7/src",
        "export IPOPT_INC=`pwd`/include/coin-or",
        "export IPOPT_LIB=`pwd`/lib",
        "export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:`pwd`/lib"
    ],

    "notify": [
        "!subteam^S01PJ2C9GPN"
    ]
}
