{
    "repository": "git@github.com:openmdao/OpenMDAO",

    "triggers": [
    ],

    "preinstall": [
        "module load mvapich2/2.3.1/gnu/4.8.5"
    ],

    "conda": [
        "python=3",
        "numpy",
        "scipy"
    ],

    "conda-forge": [
        "mpi4py=*=*mpich*",
        "petsc4py"
    ],

    "dependencies": [
        "sqlitedict",
        "objgraph"
    ],

    "extras": "[all]",

    "postinstall": [
        "~/dev/build_pyoptsparse/build_pyoptsparse.sh -p `pwd` -s ~/dev/snopt7/src",
